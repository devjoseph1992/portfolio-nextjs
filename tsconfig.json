{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/NavLink.jsx",
    "app/components/ProjectCard.jsx",
    "app/components/ProjectTag.jsx",
    "app/components/Navbar.jsx",
    "app/components/AchievementsSection.jsx",
    "app/components/AboutSection.jsx",
    "app/components/TabButton.jsx"
  ],
  "exclude": ["node_modules"]
}
